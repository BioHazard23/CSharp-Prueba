@model IEnumerable<PruebaCSharp.Models.Appointment>

@{
    ViewData["Title"] = "Patient Appointments";
    var patient = ViewBag.Patient as PruebaCSharp.Models.Patient;
}

<h2>Appointments for @patient?.Name</h2>

@if (patient != null)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5>Patient Information</h5>
            <dl class="row">
                <dt class="col-sm-2">Document:</dt>
                <dd class="col-sm-4">@patient.Document</dd>
                <dt class="col-sm-2">Phone:</dt>
                <dd class="col-sm-4">@patient.Phone</dd>
                <dt class="col-sm-2">Email:</dt>
                <dd class="col-sm-4">@patient.Email</dd>
            </dl>
        </div>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Doctor</th>
                <th>Specialty</th>
                <th>Date</th>
                <th>Time</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Doctor.Name)</td>
                    <td>
                        <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Doctor.Specialty)</span>
                    </td>
                    <td>@item.AppointmentDate.ToString("MMM dd, yyyy")</td>
                    <td>@item.AppointmentTime.ToString(@"hh\:mm")</td>
                    <td>
                        <span class="badge bg-@(item.Status.ToString() == "Scheduled" ? "success" : item.Status.ToString() == "Cancelled" ? "danger" : "primary")">
                            @Html.DisplayFor(modelItem => item.Status)
                        </span>
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            @if (item.Status == PruebaCSharp.Models.AppointmentStatus.Scheduled)
                            {
                                <form asp-action="Cancel" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to cancel this appointment?')">Cancel</button>
                                </form>
                                <form asp-action="MarkAttended" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-success" onclick="return confirm('Mark this appointment as attended?')">Attended</button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h4>No appointments found</h4>
        <p>This patient has no scheduled appointments.</p>
        <a class="btn btn-primary" asp-controller="Appointments" asp-action="Create">Schedule Appointment</a>
    </div>
}

<div class="mt-3">
    <a class="btn btn-secondary" asp-controller="Appointments" asp-action="Index">Back to All Appointments</a>
    <a class="btn btn-primary" asp-controller="Appointments" asp-action="Create">Schedule New Appointment</a>
</div>
