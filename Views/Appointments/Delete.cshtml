@model PruebaCSharp.Models.Appointment

@{
    ViewData["Title"] = "Eliminar Cita";
}

<h2>Eliminar Cita</h2>

<div class="alert alert-warning">
    <h4>¿Está seguro de que desea eliminar esta cita?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="card">
    <div class="card-header">
        <h4>Appointment #@Model.Id</h4>
        <span class="badge bg-@(Model.Status.ToString() == "Scheduled" ? "success" : Model.Status.ToString() == "Cancelled" ? "danger" : "primary") fs-6">
            @Html.DisplayFor(model => model.Status)
        </span>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5>Patient</h5>
                <p><strong>@Model.Patient.Name</strong></p>
                <p class="text-muted">@Model.Patient.Document</p>
            </div>
            <div class="col-md-6">
                <h5>Doctor</h5>
                <p><strong>@Model.Doctor.Name</strong></p>
                <p class="text-muted">@Model.Doctor.Specialty</p>
            </div>
        </div>
        
        <hr>
        
        <div class="row">
            <div class="col-md-6">
                <h5>Detalles de la Cita</h5>
                <p><strong>Date:</strong> @Model.AppointmentDate.ToString("dddd, MMMM dd, yyyy")</p>
                <p><strong>Time:</strong> @Model.AppointmentTime.ToString(@"hh\:mm")</p>
            </div>
            <div class="col-md-6">
                <h5>System Information</h5>
                <p><strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                <p><strong>Updated:</strong> @Model.UpdatedAt.ToString("MMM dd, yyyy")</p>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <hr>
            <h5>Notes</h5>
            <p class="text-muted">@Model.Notes</p>
        }
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar Cita</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
