@model IEnumerable<string>

@{
    ViewData["Title"] = "Especialidades Médicas";
}

<h2>Especialidades Médicas</h2>

<div class="row">
    @foreach (var specialty in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">@specialty</h5>
                    <a class="btn btn-outline-primary" asp-controller="Doctors" asp-action="Index" asp-route-specialty="@specialty">
                        Ver Médicos
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h4>No se encontraron especialidades</h4>
        <p>Aún no se han registrado médicos.</p>
        <a class="btn btn-primary" asp-controller="Doctors" asp-action="Create">Registrar Primer Médico</a>
    </div>
}

<div class="mt-4">
    <a class="btn btn-secondary" asp-controller="Doctors" asp-action="Index">Volver a Médicos</a>
</div>