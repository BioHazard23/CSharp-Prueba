@model PruebaCSharp.Models.Patient

@{
    ViewData["Title"] = "Editar Paciente";
}

<h2>Editar Información del Paciente</h2>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nombre Completo</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Document" class="form-label">Documento de Identidad</label>
                <input asp-for="Document" class="form-control" />
                <span asp-validation-for="Document" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Age" class="form-label">Edad</label>
                <input asp-for="Age" class="form-control" type="number" min="1" max="120" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Teléfono</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Correo Electrónico</label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Información del Paciente</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5">Creado:</dt>
                    <dd class="col-sm-7">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
                    
                    <dt class="col-sm-5">Última Actualización:</dt>
                    <dd class="col-sm-7">@Model.UpdatedAt.ToString("dd/MM/yyyy")</dd>
                </dl>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5>Guías de Actualización</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="text-success">✓</i> El documento debe permanecer único</li>
                    <li><i class="text-success">✓</i> La edad debe estar entre 1-120 años</li>
                    <li><i class="text-success">✓</i> Se requiere formato de correo válido</li>
                    <li><i class="text-warning">⚠</i> Los cambios serán registrados</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}